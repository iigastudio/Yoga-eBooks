extends layout 

block content
    if errors
        each error in errors 
            p(style="color:red") #{error.msg}

    h1 Add Yoga Ebook
    form(method="POST", action="/eBook/add")
        #form-group
            label Yoga eBook Name:
            <br>
            input.form-control(name="name", type="text", placeholder="Enter Yoga eBook Name")

        #form-group
            label Yoga eBook Description:
            <br>
            textarea.form-control(name="description", cols="25", rows="5", placeholder="Enter Yoga eBook Description")
    
        #form-group 
            label Link:
            <br>
            input.form-control(name="link", type="text", placeholder="Enter Ebook Link")

        #form-group 
            label Level:            
            <br>
            select.form-control(name="level" placeholder="Select Level")
                option(value='Beginner') Beginner
                option(value='Intermediate') Intermediate
                option(value='Advanced') Advanced              
        
        input.btn.btn-primary(type="submit", value="Submit")